[color]
	ui = true
[format]
	pretty = short
[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.strip %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.strip %>
[core]
	editor = mvim -f
[alias]
	datetag = !git tag `date \"+%Y%m%d%H%M\"`
[push]
	default = tracking
[github]
  user = <%= print("Your GitHub Username: "); STDOUT.flush; STDIN.gets.strip %>
  token = <%= print("Your GitHub API Token: "); STDOUT.flush; STDIN.gets.strip %>
